{
  "name": "@hallysonh/microtools",
  "version": "0.0.0-development",
  "description": "Tools for microservices and http requests",
  "keywords": [
    "microservice",
    "koa",
    "nodejs",
    "consul"
  ],
  "main": "microtools.umd.js",
  "module": "microtools.es5.js",
  "typings": "microtools.d.ts",
  "author": "Hallyson Almeida <hallysonh@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/hallysonh/microtools"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "prebuild": "rimraf dist docs",
    "build": "rollup -c rollup.config.ts && typedoc --out docs --target es6 --theme minimal --mode file src && copy package.json dist",
    "start": "rollup -c rollup.config.ts -w",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
    "prepush": "npm run test:prod && npm run build",
    "commitmsg": "validate-commit-msg",
    "travis-deploy-once": "travis-deploy-once"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write --no-semi --single-quote",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverage": true
  },
  "devDependencies": {
    "@types/consul": "^0.23.32",
    "@types/jest": "^23.0.0",
    "@types/koa": "^2.0.44",
    "@types/koa-router": "^7.0.27",
    "@types/node": "^11.9.5",
    "babel-core": "^6.26.3",
    "colors": "^1.1.2",
    "commitizen": "^2.9.6",
    "copy": "^0.3.1",
    "cross-env": "^5.0.1",
    "cz-conventional-changelog": "^2.1.0",
    "greenkeeper-lockfile": "^1.14.0",
    "husky": "^0.14.0",
    "jest": "^23.3.0",
    "lint-staged": "^7.0.0",
    "prettier": "^1.4.4",
    "prompt": "^1.0.0",
    "replace-in-file": "^3.0.0-beta.2",
    "rimraf": "^2.6.1",
    "rollup": "^0.62.0",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.15.0",
    "semantic-release": "^15.6.3",
    "travis-deploy-once": "^5.0.1",
    "ts-jest": "^23.0.0",
    "ts-node": "^7.0.0",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.1.0",
    "tslint-config-standard": "^7.0.0",
    "typedoc": "^0.11.0",
    "typescript": "^2.6.2",
    "validate-commit-msg": "^2.12.2"
  },
  "peerDependencies": {
    "consul": "*",
    "koa": ">2.4",
    "koa-router": "*",
    "pidusage": "*"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "release": {
    "publish": [
      {
        "path": "@semantic-release/npm",
        "pkgRoot": "dist"
      },
      "@semantic-release/github"
    ]
  }
}
